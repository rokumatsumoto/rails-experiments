= render layout: 'shared/card_form', object: resource, locals: { show_card_footer: true } do
  %h4.card-title= t('devise.unlocks.new.resend_unlock_instructions')
  = form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|
    = render 'devise/shared/error_messages', object: resource
    .form-group
      = f.label :email
      .w-100
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
    = f.submit t('devise.unlocks.new.resend_unlock_instructions'), class: "btn btn-info"
