<%= render layout: 'shared/card_form', locals: { show_card_footer: false } do %>
<h4 class="card-title"><%= t('devise.registrations.new.sign_up') %></h4>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render 'devise/shared/error_messages', object: resource %>
<div class="form-group">
  <%= f.label :email %>
  <div class="w-100"></div>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :password %>
  <% if @minimum_password_length %>
  <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
  <% end %>
  <div class="w-100"></div>
  <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :password_confirmation %>
  <div class="w-100"></div>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
</div>
<%= f.submit t('devise.registrations.new.sign_up'), class: "btn btn-primary" %>
<% end %>
<% end -%>
