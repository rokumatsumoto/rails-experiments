<% if resource.errors.any? %>
<h4>Hata:</h4>
<ul>
  <% resource.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <div class="w-100"></div>
  <% end %>
</ul>
<% end %>
<% if alert -%>
<h4>Hata:</h4>
<% if alert.is_a?(String) %>
<p class="alert"><%= alert %></p>
<% else %>
<ul>
  <% alert.each do |msg| %>
  <li><%= msg %></li>
  <div class="w-100"></div>
  <% end %>
</ul>
<% end -%>
<% end -%>
