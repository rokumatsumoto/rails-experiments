<div class="container">
  <div class="row">
    <section>
      <div class="card">
        <div class="card-block">
          <h4 class="card-title"><%= t('.change_your_password') %></h4>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render 'devise/shared/error_messages', object: resource %>
          <%= f.hidden_field :reset_password_token %>
          <div class="form-group">
            <%= f.label :password, t('.new_password') %>
            <div class="w-100"></div>
            <% if @minimum_password_length %>
            <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
            <div class="w-100"></div>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, t('.confirm_new_password') %>
            <div class="w-100"></div>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
          <%= f.submit t('.change_my_password'), class: "btn btn-primary" %>
          <% end %>
        </div>
        <div class="card-footer">
          <div class="btn-group" role="group">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
